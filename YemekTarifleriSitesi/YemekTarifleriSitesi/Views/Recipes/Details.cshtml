@model YemekTarifleriSitesi.Models.Recipe
@{
    ViewData["Title"] = Model.Name;
}
<h2>@Model.Name</h2>
<p><strong>Malzemeler:</strong> @Model.Ingredients</p>
<p><strong>Yapılışı:</strong> @Model.Instructions</p>
@if (!string.IsNullOrEmpty(Model.ImageUrl))
{
    <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width:400px;" />
}
<a href="@Url.Action("Index", "Recipes")">Tüm Tarifler</a>
